<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:installLocation="auto">

    <!--
        The INTERNET permission is used for download words or word lists
        from online sources.
        The Play Store version has this feature disabled at the moment,
        and therefore does not require INTERNET permission.
    -->
    <uses-permission tools:node="remove" android:name="android.permission.INTERNET"/>

</manifest>
